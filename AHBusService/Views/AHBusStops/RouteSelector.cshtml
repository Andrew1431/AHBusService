
@{
    ViewBag.Title = "RouteSelector";
}

<h2>Route Selector</h2>

@using (Html.BeginForm("RouteStopSchedule", "AHRouteSchedules", FormMethod.Get))
{
    <div class="form-group">
        @Html.Label("busRoutes", "Select a bus route.", new { @class = "control-label" })
        @Html.DropDownList("busRoutes", null, htmlAttributes: new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <input type="submit" value="Select" class="btn btn-primary" />
    </div>
}