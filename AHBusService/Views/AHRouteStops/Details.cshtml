@model AHBusService.Models.routeStop

@{
    ViewBag.Title = "Details";
}

<h2>Details for @ViewData["busRouteCode"] - @ViewData["busRouteName"]</h2>

<div>
    <h4>Route Stop</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Offset Minutes
        </dt>

        <dd>
            @Html.DisplayFor(model => model.offsetMinutes)
        </dd>

        <dt>
            Bus Stop Location
        </dt>

        <dd>
            @Html.DisplayFor(model => model.busStop.location)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.routeStopId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
